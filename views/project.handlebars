{{!-- Project Management Page Template --}}
<section id="project-management">
    <h2>Manage Your Inventory</h2>
    <div>
        <a href="/add-category">Add Category</a>
        <a href="/add-tag">Add Tag</a>
        <a href="/add-product">Add Product</a>
        <a href="/inventory">View Inventory</a>
    </div>

    <h3>Categories</h3>
    <ul>
        {{#each categories}}
        <li>{{this.category_name}}</li>
        {{else}}
        <li>No categories found</li>
        {{/each}}
    </ul>

    <h3>Products</h3>
    <ul>
        {{#each products}}
        <li>{{this.product_name}} - Price: ${{this.price}}, Stock: {{this.stock}} (Category ID: {{this.category_id}})
        </li>
        {{else}}
        <li>No products found</li>
        {{/each}}
    </ul>

    <h3>Tags</h3>
    <ul>
        {{#each tags}}
        <li>{{this.tag_name}}</li>
        {{else}}
        <li>No products found</li>
        {{/each}}
    </ul>
</section>

